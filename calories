<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calorie Bevande</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="script.js" defer></script>
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Calorie Bevande</h1>
        
        <div class="form-group">
            <label for="beverageSelect">Seleziona la bevanda:</label>
            <select class="form-control" id="beverageSelect">
                <option value="corona">Corona (330 ml)</option>
                <option value="redbull">Red Bull (330 ml)</option>
                <option value="chinotto">Chinotto (250 ml)</option>
                <option value="peroni">Peroni (660 ml)</option>
            </select>
        </div>
        
        <div class="form-group">
            <label for="quantityInput">Seleziona la quantit√† (ml):</label>
            <input type="number" class="form-control" id="quantityInput" min="0" step="1">
        </div>
        
        <button id="addButton" class="btn btn-primary">Aggiungi</button>
        
        <h2 class="mt-5">Risultato</h2>
        <ul class="list-group" id="resultList"></ul>
        
        <h2 class="mt-3">Risultato Totale</h2>
        <p id="totalCalories">Calorie Totali: 0</p>
    </div>
</body>
</html>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const beverages = {
        corona: { calories: 42, defaultQuantity: 330 },
        redbull: { calories: 45, defaultQuantity: 330 },
        chinotto: { calories: 38, defaultQuantity: 250 },
        peroni: { calories: 39, defaultQuantity: 660 }
    };

    const addButton = document.getElementById('addButton');
    const resultList = document.getElementById('resultList');
    const totalCaloriesDisplay = document.getElementById('totalCalories');
    let totalCalories = 0;

    addButton.addEventListener('click', function () {
        const beverageSelect = document.getElementById('beverageSelect');
        const quantityInput = document.getElementById('quantityInput');

        const selectedBeverage = beverageSelect.value;
        const quantity = parseFloat(quantityInput.value) || beverages[selectedBeverage].defaultQuantity;

        const calories = (quantity / 100) * beverages[selectedBeverage].calories;
        totalCalories += calories;

        const listItem = document.createElement('li');
        listItem.className = 'list-group-item';
        listItem.textContent = `${beverageSelect.options[beverageSelect.selectedIndex].text}: ${calories.toFixed(2)} calorie`;

        resultList.appendChild(listItem);
        totalCaloriesDisplay.textContent = `Calorie Totali: ${totalCalories.toFixed(2)}`;
    });
});    
</script>
